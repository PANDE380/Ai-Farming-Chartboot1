# Environment Configuration for AI Farming Chatbot
# Copy this to .env and adjust as needed

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///./database/farming.db

# For PostgreSQL, use:
# DATABASE_URL=postgresql://user:password@localhost:5432/farming_db

# Admin token expiration time in seconds (default: 3 hours)
ADMIN_TOKEN_EXP_SECONDS=10800

# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Chat logging
CHAT_LOG_FILE=chat_logs.txt
